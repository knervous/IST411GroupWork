# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home pages
GET     /                           controllers.Application.index
GET     /list                       controllers.Application.list
GET     /create                     controllers.Application.create
GET     /edit                       controllers.Application.edit



# Ajax Calls
POST        /create                   controllers.Ajax.create
POST        /edit                     controllers.Ajax.edit
DELETE      /delete/:id               controllers.Ajax.delete(id: Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)




